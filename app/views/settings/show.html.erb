<div class="min-h-screen">
  <div class="max-w-4xl mx-auto py-8 sm:px-6 lg:px-8">
    <div class="px-4 sm:px-0">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-4xl font-extrabold text-white sm:text-5xl">
          <span class="bg-gradient-to-r text-rich-cerulean-400 bg-clip-text text-transparent">Settings</span>
        </h1>
        <p class="mt-3 text-lg text-white/600">Manage your profile and preferences.</p>
      </div>

      <!-- Settings Form -->
      <div class="bg-shadow-grey-800 rounded-xl shadow-lg border border-shadow-grey-700 overflow-hidden">
        <%= form_with model: @user, url: settings_path, method: :patch, local: true, class: "p-6 space-y-6" do |f| %>
          <% if @user.errors.any? %>
            <div class="bg-red-500/10 border border-red-500/50 rounded-lg p-4">
              <h3 class="text-sm font-medium text-red-400 mb-2">
                <%= pluralize(@user.errors.count, "error") %> prohibited this from being saved:
              </h3>
              <ul class="list-disc list-inside text-sm text-red-300 space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <% if notice %>
            <div class="bg-green-500/10 border border-green-500/50 rounded-lg p-4">
              <p class="text-sm text-green-400"><%= notice %></p>
            </div>
          <% end %>

          <!-- Units -->
          <div>
            <%= f.label :units, "Units", class: "block text-sm font-medium text-white mb-2" %>
            <%= f.select :units, 
                options_for_select([["Metric", "metric"], ["Imperial", "imperial"]], @user.units),
                { prompt: "Select units" },
                { class: "mt-1 block w-full rounded-lg border border-shadow-grey-600 bg-shadow-grey-700 text-white shadow-sm focus:border-rich-cerulean-500 focus:ring-rich-cerulean-500 sm:text-sm px-3 py-2" } %>
          </div>

          <!-- Name -->
          <div>
            <%= f.label :name, "Name", class: "block text-sm font-medium text-white mb-2" %>
            <%= f.text_field :name, 
                class: "mt-1 block w-full rounded-lg border border-shadow-grey-600 bg-shadow-grey-700 text-white shadow-sm focus:border-rich-cerulean-500 focus:ring-rich-cerulean-500 sm:text-sm px-3 py-2",
                placeholder: "Enter your name" %>
          </div>

          <!-- Date of Birth -->
          <div>
            <%= f.label :date_of_birth, "Date of Birth", class: "block text-sm font-medium text-white mb-2" %>
            <%= f.date_field :date_of_birth, 
                class: "mt-1 block w-full rounded-lg border border-shadow-grey-600 bg-shadow-grey-700 text-white shadow-sm focus:border-rich-cerulean-500 focus:ring-rich-cerulean-500 sm:text-sm px-3 py-2" %>
          </div>

          <!-- Height -->
          <div>
            <%= f.label :height, "Height (meters)", class: "block text-sm font-medium text-white mb-2" %>
            <%= f.number_field :height, 
                step: 0.01,
                class: "mt-1 block w-full rounded-lg border border-shadow-grey-600 bg-shadow-grey-700 text-white shadow-sm focus:border-rich-cerulean-500 focus:ring-rich-cerulean-500 sm:text-sm px-3 py-2",
                placeholder: "e.g., 1.75" %>
            <p class="mt-1 text-xs text-white/500">Enter height in meters</p>
          </div>

          <!-- Weight -->
          <div>
            <%= f.label :weight, "Weight (kilograms)", class: "block text-sm font-medium text-white mb-2" %>
            <%= f.number_field :weight, 
                step: 0.01,
                class: "mt-1 block w-full rounded-lg border border-shadow-grey-600 bg-shadow-grey-700 text-white shadow-sm focus:border-rich-cerulean-500 focus:ring-rich-cerulean-500 sm:text-sm px-3 py-2",
                placeholder: "e.g., 70.5" %>
            <p class="mt-1 text-xs text-white/500">Enter weight in kilograms</p>
          </div>

          <!-- Metrics Section -->
          <div class="pt-6 border-t border-shadow-grey-700">
            <h2 class="text-xl font-semibold text-white mb-4">Metrics</h2>
            
            <!-- FTP -->
            <div class="mb-4">
              <%= f.label :ftp, "FTP", class: "block text-sm font-medium text-white mb-2" %>
              <%= f.number_field :ftp, 
                  class: "mt-1 block w-full rounded-lg border border-shadow-grey-600 bg-shadow-grey-700 text-white shadow-sm focus:border-rich-cerulean-500 focus:ring-rich-cerulean-500 sm:text-sm px-3 py-2",
                  placeholder: "e.g., 250" %>
              <p class="mt-1 text-xs text-white/500">Functional Threshold Power (watts)</p>
            </div>

            <!-- LT (HR) -->
            <div class="mb-4">
              <%= f.label :lt_hr, "LT (HR)", class: "block text-sm font-medium text-white mb-2" %>
              <%= f.number_field :lt_hr, 
                  class: "mt-1 block w-full rounded-lg border border-shadow-grey-600 bg-shadow-grey-700 text-white shadow-sm focus:border-rich-cerulean-500 focus:ring-rich-cerulean-500 sm:text-sm px-3 py-2",
                  placeholder: "e.g., 165" %>
              <p class="mt-1 text-xs text-white/500">Lactate Threshold Heart Rate (bpm)</p>
            </div>

            <!-- Max HR -->
            <div>
              <%= f.label :max_hr, "Max HR", class: "block text-sm font-medium text-white mb-2" %>
              <%= f.number_field :max_hr, 
                  class: "mt-1 block w-full rounded-lg border border-shadow-grey-600 bg-shadow-grey-700 text-white shadow-sm focus:border-rich-cerulean-500 focus:ring-rich-cerulean-500 sm:text-sm px-3 py-2",
                  placeholder: "e.g., 195" %>
              <p class="mt-1 text-xs text-white/500">Maximum Heart Rate (bpm)</p>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="flex justify-end pt-4 border-t border-shadow-grey-700">
            <%= f.submit "Save Settings", 
                class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-rich-cerulean-600 hover:bg-rich-cerulean-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rich-cerulean-500 shadow-md hover:shadow-lg transition-all duration-200" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

