<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Training Server" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-black-900 text-white min-h-screen">
    <% if user_signed_in? %>
      <nav class="bg-shadow-grey-800/90 backdrop-blur-md shadow-lg border-b border-shadow-grey-700 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <div class="flex">
              <div class="flex-shrink-0 flex items-center">
                <%= link_to root_path, class: "text-xl font-bold text-rich-cerulean-400 hover:text-rich-cerulean-300 transition-all duration-200" do %>
                  Training Server
                <% end %>
              </div>
              <div class="hidden sm:ml-8 sm:flex sm:space-x-1">
                <%= link_to root_path, class: "inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 #{request.path == root_path ? 'bg-cobalt-blue-500 text-white shadow-md hover:bg-cobalt-blue-600' : 'text-white hover:bg-shadow-grey-700'}" do %>
                  <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                  </svg>
                  Dashboard
                <% end %>
                <%= link_to activities_path, class: "inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 #{request.path.start_with?('/activities') ? 'bg-cobalt-blue-500 text-white shadow-md hover:bg-cobalt-blue-600' : 'text-white hover:bg-shadow-grey-700'}" do %>
                  <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                  </svg>
                  Activities
                <% end %>
                <%= link_to maps_path, class: "inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 #{request.path.start_with?('/maps') ? 'bg-cobalt-blue-500 text-white shadow-md hover:bg-cobalt-blue-600' : 'text-white hover:bg-shadow-grey-700'}" do %>
                  <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                  </svg>
                  Map
                <% end %>
                <%= link_to settings_path, class: "inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 #{request.path == settings_path ? 'bg-cobalt-blue-500 text-white shadow-md hover:bg-cobalt-blue-600' : 'text-white hover:bg-shadow-grey-700'}" do %>
                  <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  Settings
                <% end %>
              </div>
            </div>
            <div class="flex items-center">
              <%= button_to destroy_user_session_path, method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-iron-grey-600 hover:bg-iron-grey-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-iron-grey-500 shadow-md hover:shadow-lg transition-all duration-200" do %>
                <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                Sign out
              <% end %>
            </div>
          </div>
        </div>

        <!-- Mobile menu -->
        <div class="sm:hidden border-t border-shadow-grey-700">
          <div class="pt-2 pb-3 space-y-1 px-2">
            <%= link_to root_path, class: "flex items-center px-3 py-2 rounded-lg text-base font-medium transition-all duration-200 #{request.path == root_path ? 'bg-cobalt-blue-500 text-white shadow-md' : 'text-white hover:bg-shadow-grey-700'}" do %>
              <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Dashboard
            <% end %>
            <%= link_to activities_path, class: "flex items-center px-3 py-2 rounded-lg text-base font-medium transition-all duration-200 #{request.path.start_with?('/activities') ? 'bg-cobalt-blue-500 text-white shadow-md' : 'text-white hover:bg-shadow-grey-700'}" do %>
              <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              Activities
            <% end %>
            <%= link_to maps_path, class: "flex items-center px-3 py-2 rounded-lg text-base font-medium transition-all duration-200 #{request.path.start_with?('/maps') ? 'bg-cobalt-blue-500 text-white shadow-md' : 'text-white hover:bg-shadow-grey-700'}" do %>
              <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
              Map
            <% end %>
            <%= link_to settings_path, class: "flex items-center px-3 py-2 rounded-lg text-base font-medium transition-all duration-200 #{request.path == settings_path ? 'bg-cobalt-blue-500 text-white shadow-md' : 'text-white hover:bg-shadow-grey-700'}" do %>
              <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Settings
            <% end %>
          </div>
        </div>
      </nav>
    <% end %>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-4">
        <div class="bg-green-500/20 border border-green-500/50 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-300"><%= notice %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if alert %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-4">
        <div class="bg-red-500/20 border border-red-500/50 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-red-300"><%= alert %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
