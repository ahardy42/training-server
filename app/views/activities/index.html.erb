<% content_for :head do %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.css" />
  <script src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.js"></script>
<% end %>

<div class="min-h-screen" data-controller="bulk-upload-status" data-bulk-upload-status-check-url-value="<%= activities_path(format: :json) %>">
  <div class="max-w-7xl mx-auto py-8 sm:px-6 lg:px-8">
    <div class="px-4 sm:px-0">
      <!-- Bulk Upload Status Message -->
      <div 
        data-bulk-upload-status-target="message" 
        class="mb-6 bg-cobalt-blue-500/20 border border-cobalt-blue-500/50 rounded-lg p-4 <%= 'hidden' unless @bulk_upload_in_progress %>"
      >
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg 
              data-bulk-upload-status-target="spinner"
              class="animate-spin h-5 w-5 text-cobalt-blue-400 <%= 'hidden' unless @bulk_upload_in_progress %>" 
              xmlns="http://www.w3.org/2000/svg" 
              fill="none" 
              viewBox="0 0 24 24"
            >
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-cobalt-blue-300">
              Bulk upload in progress. Your activities are being processed in the background. This page will update automatically when complete.
            </p>
          </div>
        </div>
      </div>

      <!-- Header -->
      <div class="mb-8 flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-extrabold text-rich-cerulean-400 sm:text-5xl">
            My Activities
          </h1>
          <p class="mt-3 text-lg text-white/80">View and manage your training activities</p>
        </div>
        <div>
          <%= link_to new_activity_path, class: "inline-flex items-center px-6 py-3 bg-cobalt-blue-500 text-white rounded-lg hover:bg-cobalt-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cobalt-blue-500 transition-colors duration-200 font-medium shadow-lg" do %>
            <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            New Activity
          <% end %>
        </div>
      </div>

      <% if @activities.any? %>
        <!-- Activities List -->
        <div id="activities-list" class="space-y-6">
          <%= render partial: "activity", collection: @activities %>
        </div>

        <!-- Turbo Frame for pagination - lazy loads next page -->
        <%= turbo_frame_tag "pagination", src: (@activities.next_page ? activities_path(page: @activities.next_page, format: :turbo_stream) : nil), loading: :lazy do %>
          <% if @activities.next_page %>
            <div class="mt-8 text-center">
              <div class="inline-flex items-center px-4 py-2 text-white/60">
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-cobalt-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Loading more activities...
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-16 px-4">
          <div class="max-w-md mx-auto">
            <div class="mx-auto h-24 w-24 rounded-full bg-cobalt-blue-500/20 flex items-center justify-center mb-6">
              <svg class="h-12 w-12 text-cobalt-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-rich-cerulean-400 mb-2">No activities yet</h3>
            <p class="text-white/80 mb-6">Get started by creating your first training activity.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
