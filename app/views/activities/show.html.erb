<% content_for :head do %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.css" />
  <script src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.js"></script>
  <%= javascript_include_tag "plotly", defer: false %>
  <style>
    /* Ensure header is above Leaflet map panes (which use z-index up to ~650) */
    .activity-header-overlay {
      z-index: 1000 !important;
      position: absolute;
      pointer-events: auto;
    }
    
    /* Force modebar to display horizontally */
    .js-plotly-plot .plotly .modebar {
      flex-direction: row !important;
    }
    
    .js-plotly-plot .plotly .modebar-group {
      display: inline-flex !important;
      flex-direction: row !important;
    }
  </style>
<% end %>

<div class="min-h-screen relative">
  <!-- Map Hero Container -->
  <% if @track.present? && @trackpoints.any? %>
    <div class="w-full relative" style="height: 500px;">
      <div 
        id="activity-map" 
        class="w-full h-full"
        style="z-index: 1;"
        data-controller="activity-map"
        data-activity-map-trackpoints-value="<%= @trackpoints.map { |tp| [tp.latitude, tp.longitude] }.to_json %>"
      ></div>
      
      <!-- Header (absolutely positioned over map, transparent background) -->
      <div class="activity-header-overlay top-4 right-4 bg-black/40 backdrop-blur-sm rounded-lg p-4 border border-white/10 shadow-lg">
        <%= link_to activities_path, class: "inline-flex items-center text-xs font-medium text-white/90 hover:text-rich-cerulean-400 mb-3 group transition-colors duration-200" do %>
          <svg class="mr-2 h-4 w-4 group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Activities
        <% end %>
        
        <div>
          <h1 class="text-xl font-bold text-white mb-2">
            <%= @activity.title.presence || "Untitled Activity" %>
          </h1>
          <% if @activity.activity_type.present? %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white/10 text-white border border-white/20">
              <%= @activity.activity_type %>
            </span>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Header (when no map, positioned normally) -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8 mb-8">
      <%= link_to activities_path, class: "inline-flex items-center text-sm font-medium text-white/80 hover:text-rich-cerulean-400 mb-6 group transition-colors duration-200" do %>
        <svg class="mr-2 h-5 w-5 group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Activities
      <% end %>
      
      <div>
        <h1 class="text-4xl font-extrabold text-rich-cerulean-400 sm:text-5xl mb-4">
          <%= @activity.title.presence || "Untitled Activity" %>
        </h1>
        <% if @activity.activity_type.present? %>
          <span class="inline-flex items-center px-4 py-1.5 rounded-full text-sm font-medium bg-shadow-grey-800 text-cobalt-blue-300 border border-shadow-grey-700 shadow-sm">
            <%= @activity.activity_type %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Stats and Details -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-8 <%= 'mt-8' if @track.present? && @trackpoints.any? %>">
    <!-- Activity Details Card (Full Width) -->
    <div class="bg-shadow-grey-800 rounded-xl shadow-lg border border-shadow-grey-700 overflow-hidden mb-8">
      <div class="px-6 py-5 border-b border-shadow-grey-700">
        <h2 class="text-xl font-semibold text-white flex items-center">
          <svg class="mr-2 h-5 w-5 text-rich-cerulean-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Activity Details
        </h2>
      </div>
      <div class="px-6 py-6">
        <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
          <% if @activity.date.present? %>
            <div class="bg-shadow-grey-700 rounded-lg p-4">
              <dt class="text-xs font-semibold text-white/500 uppercase tracking-wider mb-1">Date</dt>
              <dd class="text-lg font-semibold text-white"><%= @activity.date.strftime("%B %d, %Y") %></dd>
            </div>
          <% end %>

          <% if @activity.distance.present? %>
            <div class="bg-shadow-grey-700 rounded-lg p-4">
              <dt class="text-xs font-semibold text-white/500 uppercase tracking-wider mb-1 flex items-center">
                <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                </svg>
                Distance
              </dt>
              <dd class="text-2xl font-bold text-white"><%= format_distance(@activity.distance) %> <span class="text-sm font-normal text-white/70"><%= distance_unit %></span></dd>
            </div>
          <% end %>

          <% if @activity.duration.present? %>
            <div class="bg-shadow-grey-700 rounded-lg p-4">
              <dt class="text-xs font-semibold text-white/500 uppercase tracking-wider mb-1 flex items-center">
                <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Duration
              </dt>
              <dd class="text-2xl font-bold text-white"><%= format_duration(@activity.duration) %></dd>
            </div>
          <% end %>

          <% if @activity.elevation.present? %>
            <div class="bg-shadow-grey-700 rounded-lg p-4">
              <dt class="text-xs font-semibold text-white/500 uppercase tracking-wider mb-1 flex items-center">
                <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12" />
                </svg>
                Elevation
              </dt>
              <dd class="text-2xl font-bold text-white"><%= format_elevation(@activity.elevation) %> <span class="text-sm font-normal text-white/70"><%= elevation_unit %></span></dd>
            </div>
          <% end %>

          <% if @activity.average_power.present? %>
            <div class="bg-shadow-grey-700 rounded-lg p-4">
              <dt class="text-xs font-semibold text-white/500 uppercase tracking-wider mb-1 flex items-center">
                <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                Average Power
              </dt>
              <dd class="text-2xl font-bold text-white"><%= number_with_precision(@activity.average_power, precision: 0) %> <span class="text-sm font-normal text-white/70">W</span></dd>
            </div>
          <% end %>

          <% if @activity.average_hr.present? %>
            <div class="bg-shadow-grey-700 rounded-lg p-4">
              <dt class="text-xs font-semibold text-white/500 uppercase tracking-wider mb-1 flex items-center">
                <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
                Average Heart Rate
              </dt>
              <dd class="text-2xl font-bold text-white"><%= number_with_precision(@activity.average_hr, precision: 0) %> <span class="text-sm font-normal text-white/70">bpm</span></dd>
            </div>
          <% end %>

          <% if @activity.distance.present? && @activity.duration.present? && @activity.duration > 0 %>
            <div class="bg-shadow-grey-700 rounded-lg p-4">
              <dt class="text-xs font-semibold text-white/500 uppercase tracking-wider mb-1">Average Pace</dt>
              <dd class="text-2xl font-bold text-white">
                <%= format_pace(@activity.duration / 60.0 / @activity.distance) %>
                <span class="text-sm font-normal text-white/70"><%= pace_unit %></span>
              </dd>
            </div>
          <% end %>

          <% if @activity.distance.present? && @activity.duration.present? && @activity.duration > 0 %>
            <div class="bg-shadow-grey-700 rounded-lg p-4">
              <dt class="text-xs font-semibold text-white/500 uppercase tracking-wider mb-1">Average Speed</dt>
              <dd class="text-2xl font-bold text-white">
                <%= format_speed(@activity.distance / (@activity.duration / 3600.0)) %>
                <span class="text-sm font-normal text-white/70"><%= speed_unit %></span>
              </dd>
            </div>
          <% end %>
        </dl>

        <% if @activity.description.present? %>
          <div class="mt-6 pt-6 border-t border-shadow-grey-700">
            <dt class="text-sm font-semibold text-white/700 mb-3 uppercase tracking-wider">Description</dt>
            <dd class="text-white/700 whitespace-pre-wrap leading-relaxed bg-shadow-grey-700 rounded-lg p-4 border border-shadow-grey-600"><%= @activity.description %></dd>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Charts Section -->
    <% if @chart_data.present? %>
      <div 
        class="bg-shadow-grey-800 rounded-xl shadow-lg border border-shadow-grey-700 overflow-hidden"
        data-controller="activity-charts"
        data-activity-charts-chart-data-value="<%= @chart_data.to_json %>"
        data-activity-charts-distance-unit-value="<%= distance_unit %>"
        data-activity-charts-elevation-unit-value="<%= elevation_unit %>"
        data-activity-charts-speed-unit-value="<%= speed_unit %>"
        data-activity-charts-pace-unit-value="<%= pace_unit %>"
      >
        <div class="px-6 py-5 border-b border-shadow-grey-700 flex items-center justify-between">
          <h2 class="text-xl font-semibold text-white flex items-center">
            <svg class="mr-2 h-5 w-5 text-rich-cerulean-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            Activity Charts
          </h2>
          <div class="flex items-center gap-3">
            <label for="chart-basis-selector" class="text-sm font-medium text-white/70">X-Axis:</label>
            <select 
              id="chart-basis-selector"
              data-activity-charts-target="basisSelector"
              data-action="change->activity-charts#basisChanged"
              class="bg-shadow-grey-700 border border-shadow-grey-600 text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-rich-cerulean-400 focus:border-transparent"
            >
              <option value="distance" selected>Distance</option>
              <option value="time">Time</option>
            </select>
          </div>
        </div>
        <div class="px-6 py-6 space-y-8">
          <!-- Heart Rate Chart -->
          <div class="bg-shadow-grey-700 rounded-lg p-4">
            <div data-activity-charts-target="heartrateChart" style="height: 400px;"></div>
          </div>

          <!-- Power Chart -->
          <div class="bg-shadow-grey-700 rounded-lg p-4">
            <div data-activity-charts-target="powerChart" style="height: 400px;"></div>
          </div>

          <!-- Cadence Chart -->
          <div class="bg-shadow-grey-700 rounded-lg p-4">
            <div data-activity-charts-target="cadenceChart" style="height: 400px;"></div>
          </div>

          <!-- Speed Chart -->
          <div class="bg-shadow-grey-700 rounded-lg p-4">
            <div data-activity-charts-target="speedChart" style="height: 400px;"></div>
          </div>

          <!-- Pace Chart -->
          <div class="bg-shadow-grey-700 rounded-lg p-4">
            <div data-activity-charts-target="paceChart" style="height: 400px;"></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

