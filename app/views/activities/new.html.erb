<div class="min-h-screen">
  <div class="max-w-4xl mx-auto py-8 sm:px-6 lg:px-8">
    <div class="px-4 sm:px-0">
      <!-- Header -->
      <div class="mb-8">
        <%= link_to activities_path, class: "inline-flex items-center text-sm font-medium text-white/80 hover:text-rich-cerulean-400 mb-6 group transition-colors duration-200" do %>
          <svg class="mr-2 h-5 w-5 group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Activities
        <% end %>
        
        <h1 class="text-4xl font-extrabold text-rich-cerulean-400 sm:text-5xl">
          New Activity
        </h1>
        <p class="mt-3 text-lg text-white/80">Create a new activity manually or upload a GPX/FIT file</p>
      </div>

      <!-- Error Messages -->
      <% if @activity.errors.any? || flash[:alert] %>
        <div class="mb-6 bg-red-500/20 border border-red-500/50 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-300">There were errors with your submission:</h3>
              <div class="mt-2 text-sm text-red-200">
                <ul class="list-disc list-inside space-y-1">
                  <% if flash[:alert] %>
                    <li><%= flash[:alert] %></li>
                  <% end %>
                  <% @activity.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Tabs -->
      <div class="mb-6">
        <div class="border-b border-shadow-grey-700">
          <nav class="-mb-px flex space-x-8" aria-label="Tabs">
            <button type="button" onclick="showTab('manual')" id="tab-manual" class="tab-button border-b-2 border-cobalt-blue-500 text-cobalt-blue-400 whitespace-nowrap py-4 px-1 text-sm font-medium">
              Manual Entry
            </button>
            <button type="button" onclick="showTab('upload')" id="tab-upload" class="tab-button border-b-2 border-transparent text-white/60 hover:text-white/80 hover:border-shadow-grey-600 whitespace-nowrap py-4 px-1 text-sm font-medium">
              Upload File
            </button>
          </nav>
        </div>
      </div>

      <!-- Manual Entry Form -->
      <div id="manual-form" class="tab-content">
        <%= form_with model: [current_user, @activity], url: activities_path, class: "space-y-6" do |form| %>
          <div class="bg-shadow-grey-800 rounded-xl shadow-lg border border-shadow-grey-700 overflow-hidden">
            <div class="px-6 py-5 bg-shadow-grey-700/50 border-b border-shadow-grey-700">
              <h2 class="text-xl font-semibold text-white">Activity Details</h2>
            </div>
            <div class="px-6 py-6 space-y-6">
              <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                <div>
                  <%= form.label :activity_type, class: "block text-sm font-medium text-white/80 mb-2" %>
                  <%= form.text_field :activity_type, class: "w-full rounded-lg bg-shadow-grey-700 border border-shadow-grey-600 text-white placeholder-white/40 focus:border-cobalt-blue-500 focus:ring-1 focus:ring-cobalt-blue-500 px-4 py-2", placeholder: "e.g., Running, Cycling, Hiking" %>
                </div>

                <div>
                  <%= form.label :date, class: "block text-sm font-medium text-white/80 mb-2" %>
                  <%= form.date_field :date, class: "w-full rounded-lg bg-shadow-grey-700 border border-shadow-grey-600 text-white focus:border-cobalt-blue-500 focus:ring-1 focus:ring-cobalt-blue-500 px-4 py-2" %>
                </div>
              </div>

              <div>
                <%= form.label :title, class: "block text-sm font-medium text-white/80 mb-2" %>
                <%= form.text_field :title, class: "w-full rounded-lg bg-shadow-grey-700 border border-shadow-grey-600 text-white placeholder-white/40 focus:border-cobalt-blue-500 focus:ring-1 focus:ring-cobalt-blue-500 px-4 py-2", placeholder: "Activity title" %>
              </div>

              <div>
                <%= form.label :description, class: "block text-sm font-medium text-white/80 mb-2" %>
                <%= form.text_area :description, rows: 4, class: "w-full rounded-lg bg-shadow-grey-700 border border-shadow-grey-600 text-white placeholder-white/40 focus:border-cobalt-blue-500 focus:ring-1 focus:ring-cobalt-blue-500 px-4 py-2", placeholder: "Activity description (optional)" %>
              </div>

              <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
                <div>
                  <%= form.label :distance, "Distance (km)", class: "block text-sm font-medium text-white/80 mb-2" %>
                  <%= form.number_field :distance, step: 0.01, class: "w-full rounded-lg bg-shadow-grey-700 border border-shadow-grey-600 text-white placeholder-white/40 focus:border-cobalt-blue-500 focus:ring-1 focus:ring-cobalt-blue-500 px-4 py-2", placeholder: "0.00" %>
                </div>

                <div>
                  <%= form.label :duration, "Duration (seconds)", class: "block text-sm font-medium text-white/80 mb-2" %>
                  <%= form.number_field :duration, class: "w-full rounded-lg bg-shadow-grey-700 border border-shadow-grey-600 text-white placeholder-white/40 focus:border-cobalt-blue-500 focus:ring-1 focus:ring-cobalt-blue-500 px-4 py-2", placeholder: "0" %>
                </div>

                <div>
                  <%= form.label :elevation, "Elevation (m)", class: "block text-sm font-medium text-white/80 mb-2" %>
                  <%= form.number_field :elevation, step: 0.01, class: "w-full rounded-lg bg-shadow-grey-700 border border-shadow-grey-600 text-white placeholder-white/40 focus:border-cobalt-blue-500 focus:ring-1 focus:ring-cobalt-blue-500 px-4 py-2", placeholder: "0" %>
                </div>

                <div>
                  <%= form.label :average_hr, "Avg HR (bpm)", class: "block text-sm font-medium text-white/80 mb-2" %>
                  <%= form.number_field :average_hr, class: "w-full rounded-lg bg-shadow-grey-700 border border-shadow-grey-600 text-white placeholder-white/40 focus:border-cobalt-blue-500 focus:ring-1 focus:ring-cobalt-blue-500 px-4 py-2", placeholder: "0" %>
                </div>
              </div>

              <div>
                <%= form.label :average_power, "Average Power (W)", class: "block text-sm font-medium text-white/80 mb-2" %>
                <%= form.number_field :average_power, class: "w-full rounded-lg bg-shadow-grey-700 border border-shadow-grey-600 text-white placeholder-white/40 focus:border-cobalt-blue-500 focus:ring-1 focus:ring-cobalt-blue-500 px-4 py-2", placeholder: "0" %>
              </div>
            </div>
          </div>

          <div class="flex justify-end space-x-4">
            <%= link_to "Cancel", activities_path, class: "px-6 py-2 border border-shadow-grey-600 rounded-lg text-white hover:bg-shadow-grey-700 transition-colors duration-200" %>
            <%= form.submit "Create Activity", class: "px-6 py-2 bg-cobalt-blue-500 text-white rounded-lg hover:bg-cobalt-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cobalt-blue-500 transition-colors duration-200 font-medium" %>
          </div>
        <% end %>
      </div>

      <!-- File Upload Form -->
      <div id="upload-form" class="tab-content hidden">
        <%= form_with url: activities_path, multipart: true, class: "space-y-6" do |form| %>
          <div class="bg-shadow-grey-800 rounded-xl shadow-lg border border-shadow-grey-700 overflow-hidden">
            <div class="px-6 py-5 bg-shadow-grey-700/50 border-b border-shadow-grey-700">
              <h2 class="text-xl font-semibold text-white">Upload Activity File</h2>
            </div>
            <div class="px-6 py-6">
              <div class="space-y-4">
                <div>
                  <%= form.label :activity_file, "Activity File (GPX, FIT, or gzipped FIT)", class: "block text-sm font-medium text-white/80 mb-2" %>
                  <%= form.file_field :activity_file, accept: ".gpx,.fit,.gz", class: "block w-full text-sm text-white/60 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-cobalt-blue-500 file:text-white hover:file:bg-cobalt-blue-600 file:cursor-pointer" %>
                  <p class="mt-2 text-sm text-white/60">Supported formats: GPX, FIT, or gzipped FIT files</p>
                </div>

                <div class="bg-cobalt-blue-500/10 border border-cobalt-blue-500/30 rounded-lg p-4">
                  <div class="flex">
                    <div class="flex-shrink-0">
                      <svg class="h-5 w-5 text-cobalt-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <h3 class="text-sm font-medium text-cobalt-blue-300">File Upload Information</h3>
                      <div class="mt-2 text-sm text-white/80">
                        <p>When you upload a file, the system will automatically:</p>
                        <ul class="list-disc list-inside mt-2 space-y-1">
                          <li>Extract activity metadata (name, date, type)</li>
                          <li>Calculate distance, duration, and elevation</li>
                          <li>Create trackpoints from GPS data</li>
                          <li>Import heart rate, power, and cadence data (if available)</li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="flex justify-end space-x-4">
            <%= link_to "Cancel", activities_path, class: "px-6 py-2 border border-shadow-grey-600 rounded-lg text-white hover:bg-shadow-grey-700 transition-colors duration-200" %>
            <%= form.submit "Upload and Create Activity", class: "px-6 py-2 bg-cobalt-blue-500 text-white rounded-lg hover:bg-cobalt-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cobalt-blue-500 transition-colors duration-200 font-medium" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  function showTab(tabName) {
    // Hide all tab contents
    document.querySelectorAll('.tab-content').forEach(content => {
      content.classList.add('hidden');
    });

    // Remove active styling from all tabs
    document.querySelectorAll('.tab-button').forEach(button => {
      button.classList.remove('border-cobalt-blue-500', 'text-cobalt-blue-400');
      button.classList.add('border-transparent', 'text-white/60');
    });

    // Show selected tab content
    document.getElementById(tabName + '-form').classList.remove('hidden');

    // Add active styling to selected tab
    const activeTab = document.getElementById('tab-' + tabName);
    activeTab.classList.remove('border-transparent', 'text-white/60');
    activeTab.classList.add('border-cobalt-blue-500', 'text-cobalt-blue-400');
  }
</script>

