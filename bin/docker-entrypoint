#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  # Check if database exists, if not create it
  ./bin/rails db:create 2>/dev/null || true
  
  # Run migrations only if there are pending migrations
  # This avoids errors from trying to recreate existing indexes/tables
  if ./bin/rails db:migrate:status 2>/dev/null | grep -q "down"; then
    ./bin/rails db:migrate 2>&1 | grep -v "already exists" || true
  fi
fi

exec "${@}"
